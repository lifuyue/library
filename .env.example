# Copy this file to `.env` for local development.
# CI and production environments should inject variables at runtime.

ENVIRONMENT=development
PYTHONPATH=/app
HOST=0.0.0.0

# Ports
BACKEND_PORT=8000
FRONTEND_PORT=3000
POSTGRES_PORT=5432

# Security / token
SECRET_KEY=change_me
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database configuration
POSTGRES_USER=csuser
POSTGRES_PASSWORD=change_me
POSTGRES_DB=cslibrary
DATABASE_URL=postgresql://csuser:change_me@postgres:5432/cslibrary

# CORS
CORS_ORIGINS=http://localhost:3000

# Uploads
UPLOAD_DIR=uploads

# Admin bootstrap
ADMIN_DEFAULT_USERNAME=admin
ADMIN_DEFAULT_EMAIL=admin@example.com
ADMIN_DEFAULT_PASSWORD=admin123

# Frontend configuration
VITE_API_BASE_URL=http://localhost:8000
NODE_ENV=development

# Docker build configuration
BACKEND_DOCKERFILE=Dockerfile.dev
FRONTEND_DOCKERFILE=Dockerfile.dev

