# Unified production environment variables
ENVIRONMENT=production
PYTHONPATH=/app
HOST=0.0.0.0

# Ports
BACKEND_PORT=8000
FRONTEND_PORT=3000
POSTGRES_PORT=5432

# Security / token - replace with real secrets in production
SECRET_KEY=your-super-secret-production-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database configuration
POSTGRES_USER=csuser
POSTGRES_PASSWORD=change_me
POSTGRES_DB=cslibrary
DATABASE_URL=postgresql+psycopg2://csuser:change_me@postgres:5432/cslibrary

# CORS
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Uploads
UPLOAD_DIR=uploads

# Admin bootstrap
ADMIN_DEFAULT_USERNAME=admin
ADMIN_DEFAULT_EMAIL=admin@yourdomain.com
ADMIN_DEFAULT_PASSWORD=change-this-password

# Frontend configuration
VITE_API_BASE_URL=https://yourdomain.com
NODE_ENV=production

# Docker build configuration
BACKEND_DOCKERFILE=Dockerfile.prod
FRONTEND_DOCKERFILE=Dockerfile.prod
